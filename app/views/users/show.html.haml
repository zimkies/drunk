.container
  .row
    .col-sm-6.col-sm-offset-3

      -if @user.championed?
        %h4.text-center.karma-points
          #{"%+d" % @user.karma}

        %h3.text-center
          -if @user.bad?
            No #{@user.vice} for you, you are above your limit!
          -elsif @user.ok?
            Your life is in balance! Nice work! :D
          -else
            Great Job! You are way over your virtue quota. Why not spend some time #{@user.vice} today?

        .row
          .col-xs-6.karma-column.vice-column.text-center
            Vice Count: #{-@user.negative_karma}
            =form_tag(user_karma_events_path(@user), method: "POST") do

              %input{type: 'hidden', value: "-1", name: "karma_event[points]"}

              %input.add-karma.add-vice{type: "submit", value: "+"}

          .col-xs-6.karma-column.virtue-column.text-center
            Virtue Count: #{@user.positive_karma}
            =form_tag(user_karma_events_path(@user), method: "POST") do

              %input{type: 'hidden', value: "+1", name: "karma_event[points]"}

              %input.add-karma.add-virtue{type: "submit", value: "+"}

      -else

        %h3.text-center Finding balance in your life can be hard

        =form_tag(champions_path, method: "POST") do
          %p.text-center Fortunately your friend and champion

          %input{hidden: true, value: @user.id, name: "champion[user_id]"}

          .form-group
            %input.form-control{placeholder: 'Abu', name: "champion[name]"}

          %p.text-center wants to help you out and be contacted at
          .form-group
            %input.form-control{placeholder: '555-555-5555', name: "champion[phone_number]"}
          %br
          %input.btn.btn-primary{type:'submit', value:'Register Champion'}
